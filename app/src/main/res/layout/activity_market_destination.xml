<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_destination"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.farmersmarket.john.sokoni.activities.MarketDestinationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ad_det_image"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:contentDescription="Image"
            android:paddingBottom="4dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/ad_det_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/ad_det_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/ad_det_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/ad_det_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/ad_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Fresh from farm. Ready for delivery"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/ad_det_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:text="0654867115"
            android:textColor="#000000"
            android:textSize="17sp" />
    </LinearLayout>

</ScrollView>
