<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.farmersmarket.john.sokoni">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="other.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activities.AboutUsActivity"
            android:label="About Us" />

        <activity
            android:name=".activities.PrivacyPolicyActivity"
            android:label="Privacy Policy" />

        <activity
            android:name=".activities.PostAdActivity"
            android:label="Post New Ad"
            android:theme="@style/AppTheme" />

        <activity android:name=".activities.ProductView" />

        <activity android:name=".activities.MarketDestinationActivity" />

        <activity
            android:name=".activities.NewsDestinationActivity"
            android:label="News" />

        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme" />

        <activity android:name=".activities.RegisterActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>